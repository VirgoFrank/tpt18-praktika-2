<Window x:Class="Snake_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake_Game"
        mc:Ignorable="d"
        Title="Snake Game" ResizeMode="NoResize" 
        SizeToContent="WidthAndHeight" KeyDown="Window_KeyDown">
    <Grid Name="mygrid">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Label Name="lbldirection" FontWeight="Bold">
            </Label>
            <Label Name= "lblGameStatus" FontWeight="Bold"></Label>
            <Label Name ="score" FontWeight="Bold">
                
            </Label>

        </StackPanel>
        
            <Canvas Grid.Row="1" Background="Green"  Name="canvas" Height="450" Width="800">
            

        </Canvas>
    </Grid>
</Window>
