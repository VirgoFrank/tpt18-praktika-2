<Window x:Class="Snake_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake_Game"
        mc:Ignorable="d"
        Title="Snake Game"  MouseDown="Window_MouseDown" KeyDown="Window_KeyDown" ResizeMode="NoResize" 
        SizeToContent="WidthAndHeight" Topmost="True">
    <Grid Name="mygrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="391*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="411*"/>
        </Grid.RowDefinitions>
        <Canvas Background="Green" Grid.RowSpan="2" Grid.ColumnSpan="2" Name="canvas" Height="450" Width="800">
        </Canvas>
        <Canvas>
            <Rectangle Height="50" Width="50" Stroke="Black" StrokeThickness="10" Fill="Red"
                       Name="RISTKÜLIK" RenderTransformOrigin="0.519,0.555"/>
        </Canvas>
    </Grid>
</Window>
